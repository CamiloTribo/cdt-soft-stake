{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/",
    "allowJs": false,
    "jsx": "react"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
} 